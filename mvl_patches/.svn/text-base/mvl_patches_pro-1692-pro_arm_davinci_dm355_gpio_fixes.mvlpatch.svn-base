#! /usr/bin/env bash
# Patch: -pro_arm_davinci_dm355_gpio_fixes
# Date: Mon Jan 21 23:07:17 2008
# Source: MontaVista Software, Inc.
# MR: 25973
# Type: Defect Fix
# Disposition: local
# Signed-off-by: Vladimir Barinov <vbarinov@ru.mvista.com>
# Description:
#     DM355/DM646x/DM644x has different number of GPIOs and different GPIO irq banks.
# 

PATCHNUM=1692
LSPINFO=include/linux/lsppatchlevel.h
TMPFILE=/tmp/mvl_patch_$$

function dopatch() {
    patch $* >${TMPFILE} 2>&1 <<"EOF"
Source: MontaVista Software, Inc.
MR: 25973
Type: Defect Fix
Disposition: local
Signed-off-by: Vladimir Barinov <vbarinov@ru.mvista.com>
Description:
    DM355/DM646x/DM644x has different number of GPIOs and different GPIO irq banks.

Index: linux-2.6.10/arch/arm/mach-davinci/gpio.c
===================================================================
--- linux-2.6.10.orig/arch/arm/mach-davinci/gpio.c
+++ linux-2.6.10/arch/arm/mach-davinci/gpio.c
@@ -24,6 +24,7 @@
 #include <asm/arch/irqs.h>
 #include <asm/arch/hardware.h>
 #include <asm/arch/gpio.h>
+#include <asm/arch/cpu.h>
 
 #include <asm/mach/irq.h>
 
@@ -276,7 +277,7 @@ gpio_irq_handler(unsigned irq, struct ir
 
 int __init davinci_gpio_irq_setup(void)
 {
-	unsigned	gpio, irq, bank;
+	unsigned	gpio, irq, bank, banks;
 	struct clk	*clk;
 
 	clk = clk_get(NULL, "gpio");
@@ -288,7 +289,9 @@ int __init davinci_gpio_irq_setup(void)
 
 	clk_enable(clk);
 
-	for (gpio = 0, irq = gpio_to_irq(0), bank = IRQ_GPIOBNK0;
+	for (gpio = 0, irq = gpio_to_irq(0), bank = (cpu_is_davinci_dm355() ?
+	     IRQ_DM355_GPIOBNK0 : (cpu_is_davinci_dm6467() ?
+	     IRQ_DM646X_GPIOBNK0 : IRQ_GPIOBNK0));
 	     gpio < DAVINCI_N_GPIO; bank++) {
 		struct gpio_controller	*__iomem g = gpio2controller(gpio);
 		unsigned		i;
@@ -313,7 +316,12 @@ int __init davinci_gpio_irq_setup(void)
 	/* BINTEN -- per-bank interrupt enable. genirq would also let these
 	 * bits be set/cleared dynamically.
 	 */
-	__raw_writel(0x1f, (void *__iomem)
+	if (cpu_is_davinci_dm355())
+		banks = 0x3f;
+	else
+		banks = 0x1f;
+
+	__raw_writel(banks, (void *__iomem)
 		     IO_ADDRESS(DAVINCI_GPIO_BASE + 0x08));
 
 	printk(KERN_INFO "DaVinci: %d gpio irqs\n", irq - gpio_to_irq(0));
Index: linux-2.6.10/include/asm-arm/arch-davinci/irqs.h
===================================================================
--- linux-2.6.10.orig/include/asm-arm/arch-davinci/irqs.h
+++ linux-2.6.10/include/asm-arm/arch-davinci/irqs.h
@@ -250,6 +250,8 @@
 #define DAVINCI_N_AINTC_IRQ	64
 #ifdef CONFIG_ARCH_DAVINCI_DM644x
 #define DAVINCI_N_GPIO		71
+#elif CONFIG_ARCH_DAVINCI_DM355
+#define DAVINCI_N_GPIO		104
 #else
 #define DAVINCI_N_GPIO		48
 #endif
Index: linux-2.6.10/include/asm-arm/arch-davinci/gpio.h
===================================================================
--- linux-2.6.10.orig/include/asm-arm/arch-davinci/gpio.h
+++ linux-2.6.10/include/asm-arm/arch-davinci/gpio.h
@@ -63,14 +63,18 @@ __gpio_to_controller(unsigned gpio)
 {
 	void *__iomem ptr;
 
+	if (gpio >= DAVINCI_N_GPIO)
+		return NULL;
+
 	if (gpio < 32)
 		ptr = (void *__iomem)IO_ADDRESS(DAVINCI_GPIO_BASE + 0x10);
 	else if (gpio < 64)
 		ptr = (void *__iomem)IO_ADDRESS(DAVINCI_GPIO_BASE + 0x38);
-	else if (gpio < DAVINCI_N_GPIO)
+	else if (gpio < 96)
 		ptr = (void *__iomem)IO_ADDRESS(DAVINCI_GPIO_BASE + 0x60);
 	else
-		ptr = NULL;
+		ptr = (void *__iomem)IO_ADDRESS(DAVINCI_GPIO_BASE + 0x88);
+
 	return ptr;
 }
 
